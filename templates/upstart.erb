# /etc/init/devpi.conf
description "devpi"
<% if @proxy -%>
env http_proxy=<%= @proxy %>
env https_proxy=<%= @proxy %>
export http_proxy
export https_proxy
<% end -%>

start on runlevel [2345]
stop on runlevel [!2345]
respawn

exec sudo -E -u <%= @user %> <% unless @virtualenv.empty? %><%= @virtualenv %>/bin/<% end %>devpi-server --host <%= @listen_host %> --port <%= @listen_port %> --serverdir <%= @server_dir %> <% if @restrictmodify -%>--restrict-modify root<% end -%>
